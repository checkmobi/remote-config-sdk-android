<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CheckmobiUI" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/checkmobiColorPrimary</item>
        <item name="colorPrimaryDark">@color/checkmobiColorPrimaryDark</item>
        <item name="colorAccent">@color/checkmobiColorAccent</item>
        <item name="colorButtonNormal">@color/checkmobiColorAccent</item>
    </style>

    <style name="CheckmobiUI.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="CheckmobiUI.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:ems">10</item>
    </style>

